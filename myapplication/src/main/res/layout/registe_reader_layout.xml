<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/bg"
			  android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="@dimen/x40"
		android:layout_marginRight="@dimen/x40"
		android:layout_weight="1"
		android:background="@color/bg_f"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:orientation="vertical"
		android:paddingTop="@dimen/x20">
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="@dimen/y15"
	android:orientation="horizontal">
	<TextView
		android:id="@+id/frag_start"
		style="@style/btn_style_sel"
		android:layout_toLeftOf="@+id/frag_registe_right"
		android:text="开始检测"
		/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/x30"
		android:textSize="@dimen/textsize_16"
		android:text="开始检测连接的reader并读取功率。先输入功率，点击功率保存，扫描时长默认2000 ms"/>
</LinearLayout>

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	<include
		layout="@layout/include_recyclerview"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/x40"
		android:layout_marginRight="@dimen/x40"
		android:layout_marginTop="@dimen/x30"
		android:layout_marginBottom="@dimen/y30"
		/>
	<LinearLayout
		android:id="@+id/gone_ll"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/y100"
		android:layout_gravity="center_vertical"
		android:orientation="horizontal">
		<EditText
			android:id="@+id/item_time_text"
			android:layout_width="@dimen/x210"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="@dimen/x30"
			android:paddingLeft="@dimen/x10"
			android:paddingRight="@dimen/x10"
			android:inputType="number"
			android:layout_marginTop="@dimen/y10"
			android:layout_marginBottom="@dimen/y10"
			android:textSize="@dimen/textsize_16" android:singleLine="true"
			android:textColor="@color/black"
			android:hint="扫描时间:2000 ms"
			android:background="@drawable/bg_edit_e_nor"
			/>
		<TextView
			android:id="@+id/item_setting_time"
			style="@style/btn_style_sel"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="@dimen/x30"
			android:text="时长保存"
			/>
	</LinearLayout>
</LinearLayout>

		<ScrollView
			android:id="@+id/scroll_log"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:background="@color/search_bg"
			android:layout_weight="1">
			<TextView
				android:id="@+id/txt_log"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="5dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="5dp"
				android:layout_marginTop="5dp"
				android:textAllCaps="false"
				android:scrollbars="vertical"
				android:scrollbarStyle="insideOverlay"
				android:scrollbarFadeDuration="2000"
				android:textColor="@android:color/holo_blue_dark"
				android:textSize="18sp"
				android:textStyle="bold">

			</TextView>

		</ScrollView>
	</LinearLayout>
</LinearLayout>