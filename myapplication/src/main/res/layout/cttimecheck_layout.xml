<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tl="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:id="@+id/ll"
			  android:layout_height="match_parent"
			  android:background="@color/bg_color"
			  android:orientation="vertical"
	>
	<LinearLayout
		android:id="@+id/stock_left_alltop"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/bg_color"
		android:layout_marginTop="@dimen/x20"
		android:layout_marginLeft="@dimen/x30"
		android:orientation="vertical"
		android:visibility="gone">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="耗材效期监控："
			android:textSize="@dimen/textsize_16"
			android:textColor="@color/text_color_3"
			android:textStyle="bold"/>
		<android.support.v7.widget.RecyclerView
			android:id="@+id/stock_left_rv"
			android:layout_marginTop="@dimen/x10"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:overScrollMode="never"
			>
		</android.support.v7.widget.RecyclerView>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="耗材库存预警："
			android:layout_marginTop="@dimen/x20"
			android:textSize="@dimen/textsize_16"
			android:textColor="@color/text_color_3"
			android:textStyle="bold"/>
	</LinearLayout>

	<com.flyco.tablayout.SlidingTabLayout
		android:id="@+id/cttimecheck_rg"
		android:layout_width="match_parent"
		android:layout_height="@dimen/x80"
		android:background="@color/bg_color"
		android:layout_marginTop="@dimen/x18"
		android:layout_marginLeft="@dimen/x30"
		android:paddingTop="@dimen/x20"
		android:paddingBottom="@dimen/x25"
		android:layout_marginRight="@dimen/x30"

		tl:tl_indicator_color="@color/bg_f"
		tl:tl_indicator_corner_radius="@dimen/x8"
		tl:tl_indicator_style="BLOCK"
		tl:tl_tab_padding="@dimen/x40"
		tl:tl_textsize="@dimen/textsize_17"
		tl:tl_textSelectColor="@color/bg_green"
		tl:tl_textUnselectColor="@color/text_color_3"
		tl:tl_underline_height="@dimen/x20"
		tl:tl_underline_gravity="BOTTOM"/>


	<android.support.v4.view.ViewPager
		android:id="@+id/cttimecheck_viewpager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:overScrollMode="never"
		android:layout_marginLeft="@dimen/x30"
		android:layout_marginRight="@dimen/x30"
		android:background="@color/bg_f"
		>
	</android.support.v4.view.ViewPager>

</LinearLayout>