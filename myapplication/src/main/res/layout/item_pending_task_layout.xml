<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x150"
    android:background="@drawable/bg_item_pending_task"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_top_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginTop="@dimen/x30"
        android:gravity="center_vertical"
        android:text="医嘱单未领取耗材"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_18" />
   <TextView
       android:id="@+id/tv_bottom_name"
       android:layout_below="@id/tv_top_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center_vertical"
        android:text="医嘱单未领取耗材"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_15" />
    <TextView
        android:id="@+id/tv_check_detail"
        android:layout_width="@dimen/x226"
        android:layout_height="@dimen/x68"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/password_two_ll"
        android:background="@drawable/bg_btn_line_pre"
        android:gravity="center"
        android:paddingBottom="@dimen/x10"
        android:paddingTop="@dimen/x10"
        android:text="查看详情"
        android:layout_marginRight="@dimen/x30"
        android:textColor="@color/bg_f"
        android:textSize="@dimen/textsize_17"
        />

</RelativeLayout>