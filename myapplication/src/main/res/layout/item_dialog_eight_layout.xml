<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/seven_ll"
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:gravity="center_vertical"
			  android:orientation="horizontal">

	<View
		style="@style/view_line_style"/>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center">

		<CheckBox
			android:id="@+id/seven_one"
			android:layout_width="@dimen/x35"
			android:layout_height="@dimen/x35"
			android:button="@drawable/checkbox_dialog_sel"
			android:gravity="center_horizontal"
			/>

	</LinearLayout>

	<View
		style="@style/view_line_style"/>

	<TextView
		android:id="@+id/seven_two"
		style="@style/text_title_content_style"
		android:layout_width="0dp"
		android:layout_weight="2.9"
		/>

	<View
		style="@style/view_line_style"/>

	<TextView
		android:id="@+id/seven_three"
		style="@style/text_title_content_style"
		android:layout_width="0dp"
		android:layout_weight="2.6"
		/>

	<View style="@style/view_line_style"/>


	<TextView
		android:id="@+id/seven_seven"
		style="@style/text_title_content_style"
		android:layout_width="0dp"
		android:layout_weight="2.5"/>

	<View style="@style/view_line_style"/>

	<TextView
		android:id="@+id/seven_eight"
		style="@style/text_title_content_style"
		android:layout_width="0dp"
		android:layout_weight="2"/>

	<View style="@style/view_line_style"/>

	<TextView
		android:id="@+id/seven_four"
		style="@style/text_title_content_style"
		android:layout_width="0dp"
		android:layout_weight="3.3"
		/>

	<View
		style="@style/view_line_style"/>


	<TextView
		android:id="@+id/seven_five"
		style="@style/text_title_content_style"
		android:layout_width="0dp"
		android:layout_weight="2.4"
		/>

	<View
		style="@style/view_line_style"/>

	<TextView
		android:id="@+id/seven_six"
		style="@style/text_title_content_style"
		android:layout_width="0dp"
		android:layout_weight="2.6"
		/>

	<View
		style="@style/view_line_style"/>
</LinearLayout>