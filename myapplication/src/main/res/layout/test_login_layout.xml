<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/login_all"
				android:layout_marginBottom="@dimen/x180"
				android:layout_marginTop="@dimen/x200"
				android:background="@mipmap/login_bg"
				android:focusableInTouchMode="true"
				android:focusable="true"
				android:orientation="vertical"
	>

	<LinearLayout
		android:layout_width="@dimen/x700"
		android:layout_height="@dimen/x580"
		android:layout_centerInParent="true"
		android:background="@drawable/dialog_bg"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:paddingTop="@dimen/x70"
			android:text="用户登录"
			android:textColor="@color/bg_green"
			android:textSize="@dimen/textsize_18"/>

		<EditText
			android:id="@+id/login_name"
			style="@style/login_edittext"
			android:layout_marginLeft="@dimen/x118"
			android:layout_marginRight="@dimen/x118"
			android:layout_marginTop="@dimen/x80" android:singleLine="true"
			android:drawableLeft="@mipmap/login_name"
			android:drawablePadding="@dimen/x20"
			android:hint="请输入用户名"/>

		<EditText
			android:id="@+id/login_password"
			style="@style/login_edittext"
			android:layout_marginLeft="@dimen/x118"
			android:layout_marginRight="@dimen/x118"
			android:layout_marginTop="@dimen/x60"
			android:drawableLeft="@mipmap/login_password"
			android:drawablePadding="@dimen/x20"
			android:hint="请输入密码" android:singleLine="true"
			android:inputType="textPassword"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/x80"
			android:gravity="center_horizontal"
			android:orientation="horizontal">


			<TextView
				android:id="@+id/dialog_left"
				android:layout_width="@dimen/x180"
				android:layout_height="@dimen/x68"
				android:background="@drawable/bg_btn_line_nor"
				android:gravity="center"
				android:paddingBottom="@dimen/x10"
				android:paddingLeft="@dimen/x50"
				android:paddingRight="@dimen/x50"
				android:paddingTop="@dimen/x10"
				android:text="取消"
				android:textColor="@color/text_color_58"
				android:textSize="@dimen/textsize_17"/>

			<TextView
				android:id="@+id/dialog_right"
				android:layout_width="@dimen/x180"
				android:layout_height="@dimen/x68"
				android:layout_alignParentRight="true"
				android:layout_marginLeft="@dimen/x100"
				android:background="@drawable/bg_btn_line_pre"
				android:clickable="false"
				android:gravity="center"
				android:paddingBottom="@dimen/x10"
				android:paddingLeft="@dimen/x50"
				android:paddingRight="@dimen/x50"
				android:paddingTop="@dimen/x10"
				android:text="确定"
				android:textColor="@color/bg_f"
				android:textSize="@dimen/textsize_17"
				/>
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:id="@+id/intent_right"
		android:layout_width="@dimen/x100"
		android:layout_height="@dimen/x100"
		android:layout_alignParentRight="true"/>
</RelativeLayout>