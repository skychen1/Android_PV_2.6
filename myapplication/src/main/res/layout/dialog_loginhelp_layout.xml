<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="@dimen/x1500"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/dialog_bg"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:orientation="vertical">

	<ScrollView
		android:id="@+id/scrollview"
		android:layout_width="match_parent"
		android:layout_height="@dimen/y800"
		android:layout_marginLeft="@dimen/x30"
		android:layout_marginRight="@dimen/x60"
		android:layout_marginTop="@dimen/y60"
		android:scrollbars="vertical"
		android:fadeScrollbars="false"
		android:overScrollMode="never"
		android:layout_weight="2">


		<TextView
			android:id="@+id/content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/finger_title"
			android:lineSpacingMultiplier="1.3"
			android:paddingBottom="@dimen/y20"
			android:paddingLeft="@dimen/x40"
			android:paddingRight="@dimen/x40"
			android:paddingTop="@dimen/y40"
			android:textColor="@color/text_color_6"
			android:textSize="@dimen/textsize_20"/>
	</ScrollView>

	<TextView
		android:id="@+id/dialog_btn"
		android:layout_width="@dimen/x400"
		android:layout_height="@dimen/x68"
		android:layout_below="@+id/scrollview"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="@dimen/x50"
		android:layout_marginTop="@dimen/x20"
		android:background="@drawable/bg_btn_line_pre"
		android:gravity="center"
		android:text="关     闭"
		android:textColor="@color/bg_f"
		android:textSize="@dimen/textsize_17"/>

</RelativeLayout>