<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical">


	<ImageView
		android:id="@+id/login_logo"
		android:layout_width="@dimen/x250"
		android:layout_height="@dimen/y70"
		android:layout_marginBottom="@dimen/y55"
		android:layout_marginLeft="@dimen/x79"
		android:layout_marginTop="@dimen/y55"
		android:background="@mipmap/bg_login_icon"
		/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@mipmap/login_bg"
		android:orientation="horizontal"
		>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/x210"
			android:orientation="vertical"
			>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<!--login_unknow_icon-->
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/x100"
					android:layout_marginLeft="@dimen/x30"
					android:layout_marginTop="@dimen/y100"
					android:text="耗材效期监控"
					android:textColor="@color/bg_f"
					android:textSize="@dimen/x36"/>
				<RelativeLayout
					android:id="@+id/login_unrl"
					android:layout_width="@dimen/x280"
					android:layout_height="@dimen/y130"
					android:layout_marginLeft="@dimen/x130"
					android:background="@mipmap/login_unknow_icon"
					android:layout_gravity="bottom"
					android:visibility="invisible"
					>
					<TextView
						android:id="@+id/login_unconfirmcst"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="未确认耗材"
						android:paddingTop="@dimen/y16"
						android:textSize="@dimen/x28"
						android:textColor="@color/color_o"
						android:paddingBottom="@dimen/y16"
						android:paddingLeft="@dimen/x16"
						/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/y12"
						android:layout_alignParentRight="true"
						android:layout_marginRight="@dimen/x16"
						android:textColor="@color/color_o"
						android:textSize="@dimen/x30"
						android:text=">>"/>
				</RelativeLayout>
			</LinearLayout>

			<RelativeLayout
				android:layout_width="@dimen/x716"
				android:layout_height="@dimen/y423"
			android:layout_marginTop="@dimen/y244"
				android:background="@mipmap/login_left_bg">

				<LinearLayout
					android:id="@+id/left_top"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/x424"
					android:layout_marginTop="@dimen/y45"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="过期耗材"
						android:textColor="@color/text_color_3"
						android:textSize="@dimen/x24"/>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="@dimen/x54"
						android:layout_marginTop="@dimen/y20"
						android:orientation="horizontal">

						<ImageView
							android:layout_width="@dimen/x52"
							android:layout_height="@dimen/x52"
							android:src="@mipmap/login_guo"/>

						<TextView
							android:id="@+id/left_guo_text"
							android:layout_width="@dimen/x104"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:layout_marginLeft="@dimen/x25"
							android:text=""
							android:maxLines="1"
							android:textStyle="bold"
							android:textColor="#fe5422"
							android:includeFontPadding="false"
							android:textSize="@dimen/x54"
							/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/left_top"
					android:layout_marginLeft="@dimen/x424"
					android:layout_marginTop="@dimen/y25"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="近效期耗材"
						android:textColor="@color/text_color_3"
						android:textSize="@dimen/x24"/>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="@dimen/x54"
						android:layout_marginTop="@dimen/y20"
						android:orientation="horizontal">

						<ImageView
							android:layout_width="@dimen/x52"
							android:layout_height="@dimen/x52"
							android:src="@mipmap/login_jin"/>

						<TextView
							android:id="@+id/left_jin_text"
							android:layout_width="@dimen/x104"
							android:layout_height="wrap_content"
							android:layout_marginLeft="@dimen/x25"
							android:maxLines="1"
							android:gravity="center"
							android:text=""
							android:textStyle="bold"
							android:textColor="#94C444"
							android:includeFontPadding="false"
							android:textSize="@dimen/x54"
							/>
					</LinearLayout>


				</LinearLayout>
			</RelativeLayout>
			<TextView
				android:id="@+id/login_stock_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/x50"
				android:layout_marginLeft="@dimen/x30"
				android:text="查看库存详情  〉"
				android:padding="@dimen/y15"
				android:layout_alignParentBottom="true"
				android:textColor="@color/toast_text"
				android:textSize="@dimen/x36"/>
			<TextView
				android:id="@+id/login_uninbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/x50"
				android:layout_marginLeft="@dimen/x30"
				android:layout_toRightOf="@+id/login_stock_status"
				android:text="查看未入库耗材  〉"
				android:padding="@dimen/y15"
				android:layout_alignParentBottom="true"
				android:textColor="@color/toast_text"
				android:textSize="@dimen/x36"/>
		</RelativeLayout>


		<LinearLayout
			android:layout_width="@dimen/x670"
			android:layout_height="@dimen/y610"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/x210"
			android:orientation="vertical"
			android:visibility="gone">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/x30"
				android:layout_marginTop="@dimen/y20"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="耗材效期监控："
					android:textColor="@color/bg_f"
					android:textSize="@dimen/textsize_16"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="@dimen/x50"
					android:drawableLeft="@drawable/text_bg_red"
					android:drawablePadding="@dimen/x15"
					android:text="过期耗材"
					android:textColor="@color/bg_f"
					/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="@dimen/x30"
					android:drawableLeft="@drawable/text_bg_ye"
					android:drawablePadding="@dimen/x15"
					android:text="近效期耗材"
					android:textColor="@color/bg_f"
					/>
			</LinearLayout>

			<com.github.mikephil.charting.charts.BarChart
				android:id="@+id/chart1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/x10"
				/>
		</LinearLayout>


		<android.support.v7.widget.CardView
			android:layout_width="@dimen/x600"
			android:layout_height="@dimen/y630"
			android:layout_alignParentRight="true"
			android:stateListAnimator="@null"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/x207"
			android:background="@color/bg_f"
			android:gravity="center_vertical"
			android:orientation="vertical"
			app:cardBackgroundColor="@color/white"
			app:cardCornerRadius="@dimen/x5"
			app:cardElevation="0dp"
			app:cardMaxElevation="@dimen/x1"
			app:cardPreventCornerOverlap="true"
			app:cardUseCompatPadding="true">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:background="@color/bg_f"
				android:gravity="center_vertical"
				android:orientation="vertical"
				>

				<RadioGroup
					android:id="@+id/login_radiogroup"
					android:layout_width="@dimen/x600"
					android:layout_height="@dimen/y88"
					android:layout_alignParentBottom="true"
					android:layout_alignParentRight="true"
					android:layout_marginTop="@dimen/x5"
					android:orientation="horizontal">

					<RadioButton
						android:id="@+id/login_face"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:background="@drawable/selector_login_line_text"
						android:button="@null"
						android:gravity="center"
						android:text="@string/login_face_title"
						android:textColor="@color/selector_login_tab_text"
						android:textSize="@dimen/x30"
						/>

					<View
						android:layout_width="@dimen/x2"
						android:layout_height="@dimen/y75"
						android:background="@color/bg_e"/>

					<RadioButton
						android:id="@+id/login_password"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:background="@drawable/selector_login_line_text"
						android:button="@null"
						android:checked="true"
						android:gravity="center"
						android:text="@string/login_title"
						android:textColor="@color/selector_login_tab_text"
						android:textSize="@dimen/x30"
						/>

					<View
						android:layout_width="@dimen/x2"
						android:layout_height="@dimen/y75"
						android:background="@color/bg_e"/>

					<RadioButton
						android:id="@+id/login_pass"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:background="@drawable/selector_login_line_text"
						android:button="@null"
						android:gravity="center"
						android:paddingBottom="@dimen/y20"
						android:paddingTop="@dimen/y20"
						android:text="紧急登录"
						android:textColor="@color/selector_login_tab_text"
						android:textSize="@dimen/x30"
						/>
					<View
						android:layout_width="@dimen/x2"
						android:layout_height="@dimen/y75"
						android:background="@color/bg_e"/>
				</RadioGroup>

				<high.rivamed.myapplication.views.CustomViewPager
					android:id="@+id/login_viewpager"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_below="@+id/radiogroup"
					android:overScrollMode="never">
				</high.rivamed.myapplication.views.CustomViewPager>
			</LinearLayout>
		</android.support.v7.widget.CardView>
		<View
			android:id="@+id/login_gone"
			android:layout_width="@dimen/x610"
			android:layout_height="@dimen/y640"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/x207"
			android:gravity="center_vertical"
			android:visibility="gone"
			/>
	</RelativeLayout>

	<TextView
		android:id="@+id/down_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingBottom="@dimen/y65"
		android:paddingTop="@dimen/y75"
		android:text="智能耗材管理柜 RM-SM-"
		android:textSize="@dimen/textsize_16"/>


</LinearLayout>
