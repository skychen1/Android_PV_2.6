<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/seven_ll"
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="@dimen/y100"
			  android:gravity="center_vertical"
			  android:orientation="horizontal">

	<View
		style="@style/view_line_style"/>
	<LinearLayout
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Reader_标识:"
			android:paddingLeft="@dimen/x30"
			android:paddingRight="@dimen/x30"
			android:textSize="@dimen/textsize_20"
			android:textColor="@color/black"
			android:textStyle="bold"
			android:layout_gravity="center_vertical"/>
		<View
			style="@style/view_line_style"/>
		<TextView
			android:id="@+id/id_text"
			android:layout_width="@dimen/x420"
			android:textStyle="bold"
			android:textColor="@color/black"
			android:textSize="@dimen/textsize_17"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/x30"
			android:paddingRight="@dimen/x30"
			android:layout_height="match_parent"/>
		<View
			style="@style/view_line_style"/>

		<EditText
			android:id="@+id/item_powe_text"
			android:layout_width="@dimen/x200"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/x30"
			android:layout_marginTop="@dimen/y10"
			android:layout_marginBottom="@dimen/y10"
			android:paddingLeft="@dimen/x10"
			android:paddingRight="@dimen/x10"
			android:textSize="@dimen/textsize_16"
			android:textColor="@color/black"
			android:gravity="center_vertical"
			android:inputType="number"
			android:hint="输入功率:1-30"
			android:singleLine="true"
			android:background="@drawable/bg_edit_e_nor"
			/>
		<TextView
			android:id="@+id/item_setting_powe"
			style="@style/btn_style_sel"
			android:layout_marginRight="@dimen/x30"
			android:text="功率保存"
			/>
		<View
			style="@style/view_line_style"/>
		<TextView
			android:id="@+id/item_scan"
			style="@style/btn_style_sel"
			android:layout_marginRight="@dimen/x30"
			android:text="开始扫描"
			/>
	</LinearLayout>
	<View
		style="@style/view_line_style"/>
</LinearLayout>