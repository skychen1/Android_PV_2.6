<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/x25"
    android:background="@color/bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/form_cardview"
        android:layout_width="@dimen/x425"
        android:layout_height="@dimen/x230"
        android:clickable="false"
        app:cardBackgroundColor="@color/bg"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/form_card_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_outform_top_item_nor"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/x10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_oproom_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="1号手术间"
                    android:textColor="@color/text_color_0"
                    android:textSize="@dimen/textsize_18" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x20"
                    android:text="16:04"
                    android:textColor="@color/text_color_58"
                    android:textSize="@dimen/textsize_14"
                    android:visibility="visible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x40"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_request_person_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="申领人："
                    android:textColor="@color/text_color_58"
                    android:textSize="@dimen/textsize_15" />

                <TextView
                    android:id="@+id/tv_request_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="程静"
                    android:textColor="@color/text_color_0"
                    android:textSize="@dimen/textsize_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_patient_name_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="患    者："
                    android:textColor="@color/text_color_58"
                    android:textSize="@dimen/textsize_15" />

                <TextView
                    android:id="@+id/tv_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="张三/23438977"
                    android:textColor="@color/text_color_0"
                    android:textSize="@dimen/textsize_15" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>